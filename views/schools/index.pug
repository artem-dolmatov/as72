extends ../layout
 
block content
  .container-fluid
    include ../components/mailbar
    include navbar
    .row
      .col-12.school-head.center
        h3 Все Автошколы Тюмени в одном месте
      .col-md-9
        table.table
          thead
            tr
              th(scope='col') Название
              th(scope='col') Категории
              th(scope='col') Теория/Автодром/Город
          tbody
          - schools.sort((a,b)=>{return (b.theory-a.theory)+(b.avtodrom-a.avtodrom)+(b.city-a.city)})
          each school, i in schools        
            tr
              td
                a(href='school/' + school._id) 
                  = school.name
              td
                = school.category
              td
                = school.theory + '% / '
                = school.avtodrom + '% / '
                = school.city + '%'        
      .col-md-3
    include ../components/footer  
  include ../components/scripts    