extends ../layout 

block content
  .container-fluid
    .row
      .col-12
        form(name='addschool', method='post', action='/admin')
          .row
            .col-4
              .form-group
                label(for='_id') ID
                input.form-control#input_Id(type='text', name='_id' require)
              .form-group
                label Порядковый номер
                input.form-control#inputNumber(type='number', name='number' require)
              .form-group
                label Название Автошколы
                input.form-control#inputName(type='text', name='name' require)
              .form-group
                label Категории
                input.form-control#inputCategory(type='text', name='category')
              .form-group
                label Описание
                textarea.form-control#textareaDescription(type='text', name='description')
              .form-group
                label Процент сдачи
                input.form-control#inputTheory(type='text' name='theory' placeholder="теория")  
                input.form-control#inputAvtodrom(type='text' name='avtodrom' placeholder="автодром")  
                input.form-control#inputCity(type='text' name='city' placeholder="город")
